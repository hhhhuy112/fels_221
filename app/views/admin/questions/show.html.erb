<% provide :title, t("modal_title_add_question") %>
<div class = "row">
  <aside class = "box box-primary">
    <section class = "user_info">
      <%= render "shared/user_info" %>
    </section>
  </aside>
  <div class = "show-question col-md-12 box box-primary">
    <h2><%= @question.category.name %></h2>
    <%= form_for [:admin, @question] do |f|%>
      <div class = "row">
        <div class = "field col-md-8 col-md-offset-2">
          <%= f.label :content, t("question") %>
          <%= f.text_field :content, required: true, class: "form-control" %>
        </div>
      </div>
    <div class = "row">
      <h2 class = "number-answers">
        <%= t "(" %>
        <%= pluralize @quantity_answers, t("answer") %>
        <%= t ")" %>
      </h2>
      <div id = "area_answer">
        <%= f.fields_for :answers do |answer|%>
          <%=render "answer_fields", f: answer%>
        <%end%>
      </div>
      <div class = "action-show-question">
        <%= link_to t("button_add_answer"), "javascript:void(0)", class: "btn btn-info
          col-md-3 col-md-offset-3 duplicate_nested_form_show_question  "%>
        <%= f.submit t("submit"), class: "btn-edit-question btn btn-primary col-md-3" %>
      </div>
    </div>
    <% end %>
  </div>
</div>

